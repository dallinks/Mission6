@{
    ViewData["Title"] = "Quadrants";
}

@model List<ToDoItem>

<div class="container">
    <div class="row">
        <!--Quadrant 1-->
        <div class="col-6 border">
            <h3>Quadrant 1</h3>
            <!--Loop through tasks that have a quadrant id of 1-->
            @foreach (var x in Model)
            {
                @if (x.Quadrant == 1)
                {
                    <div style="padding-bottom:20px">
                        <h4>@x.Task</h4>
                        <h4><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.ToDoItemId">    Edit</a>  <a asp-controller="Home" asp-action="Delete" asp-route-id="@x.ToDoItemId">Delete</a></h4>
